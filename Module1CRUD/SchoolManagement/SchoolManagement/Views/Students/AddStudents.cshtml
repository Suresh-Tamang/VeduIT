@model SchoolManagement.Models.AddStudentsViewModel
<h1>Add Student</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>

    <div class="mt-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" />
    </div>

    <div class="mt-3">
        <label class="form-label">Course</label>
        <input type="text" class="form-control" asp-for="Course" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Enrolled" asp-for="Enrolled" />
        <label class="form-check-label" for="Enrolled">Enrolled</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>